<div class="col-md-5">
  <%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :login, placeholder: "登录名" %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role do %>
      <%= f.select :role, User.role.options %>
    <% end %>

    <div class="form-group">
      <%= f.submit "保存", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
